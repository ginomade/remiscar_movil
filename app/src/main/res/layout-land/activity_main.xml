<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d5d9ea">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".40"
                android:layout_margin="3dp"
                android:background="#d5d9ea">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="00"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/textNroMovil"
                            android:textColor="#ff000fff"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="----------"
                            android:id="@+id/textStatus"
                            android:textColor="#ffff0000"
                            android:textSize="19dp"
                            android:layout_marginLeft="15dp" />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        style="@style/ButtonText"
                        android:text="VIAJES"
                        android:id="@+id/buttonViajes"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="#4863a0" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#4863a0"
                    android:id="@+id/layZonas">
                    <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="CARLITOS"
                            android:id="@+id/textView4" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="0"
                            android:id="@+id/textCarlitos"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Libres"
                            android:id="@+id/textView6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="0"
                            android:id="@+id/textLibres"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="BAHIA"
                            android:id="@+id/textView8" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="0"
                            android:id="@+id/textBahia"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Libres"
                            android:id="@+id/textView10" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"

                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="0"
                            android:id="@+id/textLibresB"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="PROHIBIDO USAR AL CONDUCIR"
                    android:id="@+id/textView20"
                    android:textColor="#ffffff"
                    android:background="#ff0000"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="5dp" />
            </LinearLayout>
            <ScrollView
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="#d5d9ea">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:id="@+id/frmStatusLoc"
                    android:background="#ff9d9d9d"></FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffff1b00"
                    android:id="@+id/frmAlerta">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALERTA ACTIVA"
                        android:id="@+id/textView21"
                        android:layout_gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </FrameLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Origen"
                    android:id="@+id/textView12"
                    android:textColor="#0000ff" />
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:id="@+id/frmStatusOrigen"
                        android:background="#ffff1b00"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"></FrameLayout>
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="Hora"
                            android:id="@+id/textView11"
                            android:textColor="#0000ff" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="00:00"
                            android:id="@+id/textHoraViaje"
                            android:layout_marginLeft="12dp"
                            android:textSize="18dp" />
                    </LinearLayout>
                </FrameLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xxxx"
                    android:id="@+id/textOrigen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Destino"
                    android:id="@+id/textView13"
                    android:textColor="#0000ff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xxxx"
                    android:id="@+id/textDestino" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Pasajero"
                    android:id="@+id/textView14"
                    android:textColor="#0000ff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xxxx"
                    android:id="@+id/textPasajero" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Empresa"
                    android:id="@+id/textView15"
                    android:textColor="#0000ff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xxxx"
                    android:id="@+id/textEmpresa" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observaciones"
                    android:id="@+id/textView16"
                    android:textColor="#0000ff"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="xxxx"
                    android:id="@+id/textObs" />




            </LinearLayout>
            </ScrollView>
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#d5d9ea">

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                style="@style/ButtonText"
                android:text="INICIO"
                android:id="@+id/buttonInicio"
                android:layout_weight="1"
                android:background="#4863a0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                style="@style/ButtonText"
                android:text="FIN VIAJE"
                android:id="@+id/buttonCobrar"
                android:layout_weight="1"
                android:background="#4863a0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                style="@style/ButtonText"
                android:text="MAPA"
                android:id="@+id/buttonMapa"
                android:layout_weight="1"
                android:background="#4863a0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#d5d9ea">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonText"
                android:text="PANICO"
                android:id="@+id/buttonPanico"
                android:layout_weight="1"
                android:background="#FF0000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonText"
                android:text="NOVEDADES"
                android:id="@+id/buttonNov"
                android:layout_weight="1"
                android:background="#4863a0" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
