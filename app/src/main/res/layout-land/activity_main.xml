<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Remiscar Movil"
            android:textColor="#ffffff"
            android:background="#0288D1"
            android:textSize="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d5d9ea">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight=".20"
                android:background="#d5d9ea"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textNroMovil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="00"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ff000fff"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="----------"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffff0000"
                        android:textSize="19dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonMapa"
                    style="@style/ButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#0288D1"
                    android:text="MAPA" />

                <ImageButton
                    android:id="@+id/buttonReload"
                    style="@style/ButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#0288D1"
                    android:src="@drawable/ic_autorenew_white_24dp" />


            </LinearLayout>
            <ScrollView
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="#d5d9ea">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:id="@+id/frmStatusLoc"
                    android:background="#ff9d9d9d"></FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffff1b00"
                    android:id="@+id/frmAlerta">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALERTA ACTIVA"
                        android:id="@+id/textView21"
                        android:layout_gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </FrameLayout>
                <WebView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/webViewMain"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>
            </ScrollView>
        </LinearLayout>





        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#d5d9ea">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonText"
                android:text="PANICO"
                android:id="@+id/buttonPanico"
                android:layout_weight="1"
                android:background="#FF0000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonText"
                android:text="NOVEDADES"
                android:id="@+id/buttonNov"
                android:layout_weight="1"
                android:background="#0288D1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
