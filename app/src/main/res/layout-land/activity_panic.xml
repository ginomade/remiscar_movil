<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nomade.movilremiscar.remiscarmovil.PanicActivity"
    android:background="#d5d9ea">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#d5d9ea">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Control de mensajes de alerta."
            android:id="@+id/textView7" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PRUEBA"
            android:id="@+id/buttonPrueba"
            style="@style/ButtonText"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ALARMA"
            android:id="@+id/buttonAlerta"
            style="@style/ButtonText"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:background="#ffff1b00" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLO EN CASO DE EMERGENCIA"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_gravity="center_horizontal"
            android:editable="false"
            android:focusable="false" />


    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Volver"
        style="@style/ButtonText"
        android:id="@+id/buttonInicio"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="#01579B" />
</RelativeLayout>
